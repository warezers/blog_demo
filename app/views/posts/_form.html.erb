<%= form_for @post do |f| %>
 <% if @post.errors.any? %>
 	<h2><%=pluralize(@post.errors.count, "error")%></h2>
 	<ul>
 		<% @post.errors.full_messages.each do |name,msg|%>
 		<li><%=msg%></li>
 		<% end %>
 	</ul>
 <% end %>
	 <%= f.label :title%><br>
	 <%= f.text_field :title %>
	 <br>
	 <br>
	 <%= f.label :content%><br>
	 <%= f.text_area :content %>
	 <br>
	 <br>
	 <%= f.submit %>

<% end %>